
<header>
    {{> navbar}}
</header>

<div class="container-fluid river-container">
    <ul class="saved">
        {{#each riverSections}}
            <li data-riverSection-id={{_id}}>
                {{#if note}}
                    <div class="note" data-note-id={{note._id}}>Notes: {{note.text}}</div>
                    <button class="editNote">Edit Note</button>
                    <form class="editForm">
                        <input class="text" placeholder="Add notes here"/>
                        <button type="submit">Submit Note</button>
                    </form>
                {{/if}}
                {{#unless note}}
                    <button class="addNote">Add Note</button>
                    <form class="addForm">
                        <input class="text" placeholder="Add notes here"/>
                        <button type="submit">Submit Note</button>
                    </form>
                {{/unless}}
            </li>
        {{/each}}
    </ul>
</div>


<footer>
{{> footer}}
</footer>



