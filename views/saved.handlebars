
<header>
    {{> navbar}}
</header>

<div class="container-fluid">
    <table class="table table-striped table-bordered table-dark table-hover table-sm ">
        <thead>
            <tr>
            <th class="w15" scope="col">River Name</th>
            <th class="w20" scope="col">Section</th>
            <th class="w10" scope="col">Class</th>
            <th class="w10" scope="col">CFS</th>
            <th class="w10" scope="col">delta</th>
            <th class="w10" scope="col">Recommendation</th>
            <th class="w15" scope="col">Last Updated</th>
            <th class="w5 text-center hide" scope="col" >Save</th>
            <th class="w5 text-center hide" scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
           {{#each riverSections}} 
                <tr data-river-section-id={{_id}}>
                    <td>{{this.riverName}}</td>
                    <td>{{this.riverSection}}</td>
                    <td>{{this.sectionClass}}</td>
                    <td>{{this.sectionCFS}}</td>
                    <td>{{this.changeCFS}}</td>
                    <td>{{this.recommendation}}</td>
                    <td>{{this.lastUpdated}}</td>
                    <td class="text-center w4 hide"><button class="btn btn-primary saveRiverSection">+</button></td>
                    <td class="text-center w4 hide"><button class="btn btn-danger deleteRiverSection">-</button></td>
                </tr>
                <tr data-river-section-id={{_id}}>
                    <td colspan="9">
                        <div class="notesRow">
                            {{#if notes}}
                                {{#each notes}}
                                    
                                        {{!-- <button class="btn btn-warning editNote">Edit Note</button> --}}
                                        <form class="editForm" data-note-id={{_id}}>
                                            <input class="text" placeholder="Edit Note" >
                                            <button class="btn btn-warning" type="submit">Update Note</button>
                                        </form>
                                    
                                    <div class="note" data-note-id={{_id}}>{{body}}</div>
                                {{/each}}
                            {{/if}}
                    
                            {{#unless notes}}
                                {{!-- <button class="btn btn-warning addNote">Add Note</button> --}}
                                <form class="addForm">
                                    <input class="text" placeholder="Add Notes Here"/>
                                    <button class="btn btn-primary" type="submit">Submit</button>
                                </form>
                            {{/unless}}
                        </div>
                    </td>
                    
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>


<footer>
{{> footer}}
</footer>



